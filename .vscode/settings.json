{
    "[markdown]": {
        "editor.formatOnSave": true,
        "editor.wordWrap": "on",
        "editor.renderWhitespace": "all",
        "editor.acceptSuggestionOnEnter": "smart"
    },
    "files.exclude": {
        ".*": true,  // all hidden files and directories in project root
        "build.{sh,cmd}": true
    },
    "PandocCiter.DefaultBib": "src/bibliography.bib",
    "markdown.occurrencesHighlight.enabled": true,
    "languageToolLinter.languageTool.motherTongue": "de-DE",
    "languageToolLinter.languageTool.preferredVariants": "de-DE,en-US",
    "languageToolLinter.plainText.languageIds": [
        "plaintext",
        "markdown"
    ],
    "languageToolLinter.serviceType": "public"
}