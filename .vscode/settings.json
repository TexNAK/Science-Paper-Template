{
    "[markdown]": {
        "editor.formatOnSave": true,
        "editor.wordWrap": "on",
        "editor.renderWhitespace": "all",
        "editor.acceptSuggestionOnEnter": "smart"
    },
    "files.exclude": {
        "**/.template": false,
        "**/.build": false,
        "**/.docker": false,
        "**/.vscode": false,
        "**/.gitignore": false,
        "**/.travis.yml": false,
        "**/.markdownlint.json": false,
        "**/.github": false,
        "**/.sptcloud.json": false
    },
    "PandocCiter.DefaultBib": "src/bibliography.bib",
    "markdown.occurrencesHighlight.enabled": true,
    "languageToolLinter.languageTool.motherTongue": "de-DE",
    "languageToolLinter.languageTool.preferredVariants": "de-DE,en-US",
    "languageToolLinter.plainText.languageIds": [
        "plaintext",
        "markdown"
    ],
    "languageToolLinter.serviceType": "public"
}